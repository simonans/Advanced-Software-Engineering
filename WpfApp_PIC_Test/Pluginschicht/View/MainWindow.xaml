<Window x:Class="WpfApp_PIC.Pluginschicht.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_PIC"
        xmlns:converter="clr-namespace:WpfApp_PIC.Adapterschicht.View"
        mc:Ignorable="d"
        Title="Register Values" Height="450" Width="800">

    
    <Window.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>


    <StackPanel Margin="10">
        <TextBlock Text="ZUM TESTEN VOM DATENSPEICHER -Den DATAbinding-Error wenn das TExtfeld leer ist, kann man ignorieren" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <!-- Index TextBlock und TextBox -->
            <TextBlock Text="Index" FontWeight="Bold" FontSize="16" Margin="0,0,10,10"/>
            <TextBox x:Name="IndexTextBox" Width="200" HorizontalAlignment="Left" Margin="0,0,10,10"
             Text="{Binding RegisterIndex, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Wert TextBlock und TextBox -->
            <TextBlock Text="Wert" FontWeight="Bold" FontSize="16" Margin="0,0,10,10"/>
            <TextBox x:Name="ValueTextBox" Width="200" HorizontalAlignment="Left" Margin="0,0,10,10"
             Text="{Binding RegisterValue, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Button zum Übermitteln der Eingabe -->
            <Button Content="Update Register" Width="150" Margin="0,0,0,10" HorizontalAlignment="Left"
            Command="{Binding UpdateRegisterCommand}" />
        </StackPanel>


        <!-- Anzeigen der Registerwerte -->
        <ListView ItemsSource="{Binding RegisterValues}" HorizontalAlignment="Stretch" Height="200">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="10" Columns="16"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" FontSize="14"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>

</Window>
